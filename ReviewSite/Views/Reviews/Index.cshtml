@model IEnumerable<ReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                <p> @Html.DisplayNameFor(model => model.Rating) :  @Html.DisplayFor(modelItem => item.Rating)</p>
                <p>@Html.DisplayNameFor(model => model.Author) :   @Html.DisplayFor(modelItem => item.Author)</p>
                @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
            </div>
        </div>
    </div>
    }
</div>